<div class="ui center aligned grid">
  <h1>Messages#new</h1><br>
  <%= @wish.description %><br>
  <%= @wish.deadline %>
</div>
<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <form class="ui form">
      <%= form_for @messages, url: wish_messages_path(@wish.id) do |f| %>
        <div class="field">
          <label>Name</label>
          <%= f.text_field :name %>
          <label>Body</label>  
          <%= f.text_area :body, :rows => "2" %>
          <div id="preview">
          </div>
          <label for="file" class="ui icon button">
            <i class="image icon"></i>
            Image Upload
          </label>
          <%= f.file_field :icon, style: "display:none", :id => "file" %>
          <%= f.submit "投稿する", :class => "ui button" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="four wide column"></div>
</div>