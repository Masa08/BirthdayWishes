<div class="main">
  <div class="textcontainer">
    <h1 class="main-title center aligned">Message</h1>
  </div>
  <p class="message"><%= @wish.description %></p>
  <p class="message"><%= @wish.deadline %>　までにメッセージを送ろう！</p>
</div>
<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <%= form_for @messages, url: wish_messages_path(@wish.id), html: {class: "ui large form"} do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :name,:placeholder => "Enter your name." %>
          </div>
        </div>
        <div class="field">
          <%= f.text_area :body, :rows => "3", :placeholder => "Enter your message." %>
        </div>
        <div id="preview">
        </div>
        <div class="field center aligned">
          <label for="file" class="ui icon button">
            <i class="image icon"></i>
            Image Upload
          </label>
          <%= f.file_field :icon, style: "display:none", :id => "file" %>
        </div>
        <%= f.submit "投稿する", :class => "ui fluid large teal submit button" %>
      </div>  
    <% end %>
  </div>
  <div class="four wide column"></div>
</div>