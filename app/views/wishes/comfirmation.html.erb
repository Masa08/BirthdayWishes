<h1>confirming form</h1>
<%= form_for @wish, url: {action: 'new'}, method: :get do |f| %>

    <%= @wish.description %>
    <%= f.hidden_field :description %>
    <%= @wish.object %>
    <%= f.hidden_field :object %>
    <%= @wish.deadline %>
    <%= f.hidden_field :deadline %>
    <%= @wish.title %>
    <%= f.hidden_field :title %>
    <%= image_tag @wish.image.to_s %>
    <%= f.hidden_field :image %>

    <%= f.submit 'back' %>
    
<% end %>

<%= form_for @wish, url: {action: 'create'} do |f| %>

    <%= f.hidden_field :description %>
    <%= f.hidden_field :object %>
    <%= f.hidden_field :deadline %>
    <%= f.hidden_field :title %>
    <%= f.hidden_field :image %>

    <%= f.submit 'enter' %>
<% end %>


